" ---- Font ----
if has('win32')
    set renderoptions=type:directx " enable font ligatures
    " set guifont=DejaVu_Sans_Mono:h8:cANSI
    " set guifont=Iosevka_SS04_Extended:h8:cANSI:qDRAFT
    " set guifont=Fira_Code_Retina:h8:W450:cANSI:qDRAFT
    " set guifont=Fantasque_Sans_Mono:h10:cANSI:qDRAFT
    " set guifont=Victor_Mono:h9:cANSI:qDRAFT
    set guifont=Cascadia_Code:h8:cANSI:qDRAFT
else
    " set guifont=DejaVu\ Sans\ Mono\ Book\ 10
    " set guifont=Iosevka\ Medium\ 10
    " set guifont=Fira\ Code\ weight=450\ 8
    " set guifont=Fantasque\ Sans\ Mono\ 9
    " set guifont=Victor\ Mono\ 9
    set guifont=Cascadia\ Code\ Semi-Bold\ 9
    set guiligatures=!\"#$%&()*+-./:<=>?@[]^_{\|~
endif

" ---- Window size ----
set lines=42
set columns=124

" ---- Interface ----
set guioptions=grdMe!
set mouse=nvc
set mousehide        " hide the mouse when typing text

" make shift-insert work like in Xterm
map <S-Insert> <MiddleMouse>
map! <S-Insert> <MiddleMouse>
